{
    "manifest_version": 3,
    "name": "ShortcutU",
    "version": "1.0",
    "description": "Autofill text using custom shortcuts",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://shortcuts.advokati-bg.com:3222/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": [{
        "resources": ["styles.css", "lib/*"],
        "matches": ["<all_urls>"]
    }],
    "action": {
        "default_icon": "icon.png",
        "default_title": "ShortcutU"
    },
    "icons": {
        "128": "icon.png"
    }
}